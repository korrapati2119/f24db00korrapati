extends layout

block content
  h1= title
  form(id='VehicleForm', action="/resource/vehicles", method="POST")
    div.form-group
      label.siteAttr(for='vehicle_name') Vehicle Name
      input#vehicle_name(type='text', name='vehicle_name', required=true)
    div.form-group
      label.siteAttr(for='price') Price
      input#price(type='number', name='price', required=true)
    div.form-group
      label.siteAttr(for='functionality') Functionality
      input#functionality(type='text', name='functionality', required=true)
    input(type="submit", value="Create")
  
  script.
    document.forms['VehicleForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target))
      })
      .then((resp) => resp.json())
      .then((body) => {
        alert("Save succeeded!");
      })
      .catch((error) => {
        alert("Save failed: " + error);
      });
    });
