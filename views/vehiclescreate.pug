extends layout

block content
  h1 Create a New Vehicle
  form(id='VehicleForm', action="/vehicles", method="POST" class="form-container")
    div.form-group
      label.vehicleAttr(for='vehicle_name') Vehicle Name
      input#vehicle_name(type='text', name='vehicle_name', class='form-control', required=true)
    div.form-group
      label.vehicleAttr(for='functionality') Functionality
      input#functionality(type='text', name='functionality', class='form-control', required=true)
    div.form-group
      label.vehicleAttr(for='price') Price
      input#price(type='number', name='price', class='form-control', required=true, min=0)
    input(type="submit" class="btn btn-primary" value="Submit")
script.
    document.getElementById('VehicleForm').addEventListener('submit', function(event) {
      event.preventDefault();
      const form = event.target;

      fetch(form.action, {
        method: form.method,
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams(new FormData(form))
      })
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        return response.json();
      })
      .then(data => {
        alert(data.message || "Vehicle created successfully!");
        form.reset(); // Reset the form after success
      })
      .catch(error => {
        alert("Error: " + error.message);
      });
    });