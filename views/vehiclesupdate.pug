extends layout

block content
  h1 Update Vehicle
  if success
        script.
            alert('Update succeeded!');
  form(action="/vehicles/update" method="POST")
    input(type="hidden" name="id" value=toShow._id)
    div.form-group
      label(for="vehicle_name") Vehicle Name:
      input#vehicle_name(type="text" name="vehicle_name" value=toShow.vehicle_name)
    div.form-group
      label(for="functionality") Functionality:
      input#functionality(type="text" name="functionality" value=toShow.functionality)
    div.form-group
      label(for="price") Price:
      input#price(type="number" name="price" value=toShow.price)
    button(type="submit") Update
