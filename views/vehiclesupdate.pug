extends layout

block content
  h1 Update Vehicle
  form(id="updateForm" action="/vehicles/update" method="POST")
    input(type="hidden" name="id" value=toShow._id)
    div.form-group
      label(for="vehicle_name") Vehicle Name:
      input#vehicle_name(type="text" name="vehicle_name" value=toShow.vehicle_name)
    div.form-group
      label(for="functionality") Functionality:
      input#functionality(type="text" name="functionality" value=toShow.functionality)
    div.form-group
      label(for="price") Price:
      input#price(type="number" name="price" value=toShow.price)
    button(type="submit") Update

  script.
    document.getElementById('updateForm').addEventListener('submit', async function (event) {
      event.preventDefault(); // Prevent default form submission
      
      const formData = new FormData(this);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch(this.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (!response.ok) {
          const error = await response.json();
          alert(`Error: ${error.error}`);
        } else {
          const result = await response.json();
          alert(`Update successful: ${result.message}`);
        }
      } catch (err) {
        alert(`Error: ${err.message}`);
      }
    });
